# AnimeMuseAI Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Convex Configuration (Required)
VITE_CONVEX_URL=https://your-deployment-name.convex.cloud

# Auth0 Configuration (Optional - for enhanced authentication)
# Replace with your actual Auth0 domain and client ID
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=your-auth0-audience

# OpenAI Configuration (Required for AI features)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Twilio Configuration (Required for SMS verification)
# Get these from your Twilio Console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
NODE_ENV=development
VITE_APP_NAME=AnimeMuseAI
VITE_APP_VERSION=1.0.0

# Security Configuration
VITE_ENABLE_DEVELOPMENT_TOOLS=true
VITE_STRICT_MODE=true

# Performance Configuration
VITE_BUNDLE_ANALYZER=false
VITE_SOURCE_MAPS=false

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ADMIN_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# External APIs
ANILIST_API_URL=https://graphql.anilist.co

# Cache Configuration
VITE_CACHE_TTL=604800  # 7 days in seconds

# Development Only (Remove in production)
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
